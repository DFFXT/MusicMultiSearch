<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    package="com.simple">

    <dist:module dist:instant="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".base.MyApplication"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/net_security"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".module.main.ControllerActivity"
            android:configChanges="screenSize|screenLayout"
            android:screenOrientation="portrait"
            android:theme="@style/SplashThem">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--<activity
            android:name=".module.search.searchResult.SearchResultFragment"
            android:configChanges="screenLayout|screenSize|smallestScreenSize|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />-->
        <activity android:name=".module.download.DownloadActivity" />
        <activity android:name=".module.search.related.SearchActivity" />
        <activity android:name=".module.lyrics.ui.LyricsActivity" />

        <service android:name=".module.player.MusicPlayer" />
        <service android:name=".module.download.service.DownloadService" />
    </application>

</manifest>