<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector_gray_bottom_line">
    <TextView
        android:id="@+id/tv_musicName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="@dimen/textSize_normal"
        android:ellipsize="end"
        app:layout_constrainedWidth="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_duration"
        tools:text="dsfadsfdsfs333333333333333333333333333333333333daf"
        />
    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_info"
        app:layout_constraintStart_toEndOf="@id/tv_musicName"
        tools:text="2:00"/>
    <ImageView
        android:id="@+id/iv_info"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@null"
        android:src="@drawable/info_icon"
        android:padding="10dp"
        android:background="@drawable/ripple_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_musicName"
        app:layout_constraintBottom_toBottomOf="@id/tv_artistName"/>
    <TextView
        android:id="@+id/tv_artistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize_min"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tv_musicName"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="artist"/>
    <TextView
        android:id="@+id/tv_album"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textSize="@dimen/textSize_min"
        android:layout_marginEnd="20dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toEndOf="@id/tv_artistName"
        app:layout_constraintBottom_toBottomOf="@id/tv_artistName"
        app:layout_constraintEnd_toStartOf="@id/tv_duration"
        tools:text=" - album"/>
</androidx.constraintlayout.widget.ConstraintLayout>