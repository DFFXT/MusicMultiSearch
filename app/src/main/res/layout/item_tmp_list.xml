<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_transparent_gray"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">
    <com.simple.view.RoundImageView
        android:id="@+id/iv_playingFlag"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:contentDescription="@null"
        android:src="@color/themeColor"
        android:visibility="gone"
        app:iv_radius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="visible"
        />
    <TextView
        android:id="@+id/tv_musicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize_normal"
        android:textColor="@color/textColor_3"
        android:layout_marginStart="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_goneMarginStart="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_playingFlag"
        app:layout_constraintEnd_toStartOf="@id/tv_artistName"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constrainedWidth="true"
        tools:text="77777777777777777777"/>
    <TextView
        android:id="@+id/tv_artistName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/textSize_small"
        android:textColor="@color/textColor_9"
        android:maxWidth="200dp"
        app:layout_constraintStart_toEndOf="@id/tv_musicName"
        app:layout_constraintTop_toTopOf="@id/tv_musicName"
        app:layout_constraintBottom_toBottomOf="@id/tv_musicName"
        app:layout_constraintEnd_toStartOf="@id/iv_download"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constrainedWidth="true"
        tools:text="artist8888888888888888888888888888"/>
    <ImageView
        android:id="@+id/iv_download"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:src="@drawable/icon_download"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        app:layout_constraintEnd_toStartOf="@id/iv_delete"
        app:layout_constraintTop_toTopOf="@id/tv_artistName"
        app:layout_constraintBottom_toBottomOf="@id/tv_artistName"
        tools:visibility="visible"
        />
    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:contentDescription="@null"
        android:src="@drawable/delete"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>